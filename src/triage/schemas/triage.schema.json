{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/triage.schema.json",
  "title": "bioslogtriage CLI output",
  "type": "object",
  "required": [
    "schema_version",
    "normalization",
    "events",
    "llm_enabled"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "normalization": {
      "type": "object",
      "required": [
        "line_count"
      ],
      "properties": {
        "line_count": {
          "type": "integer",
          "minimum": 0
        },
        "empty_line_count": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": true
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "llm_enabled": {
      "type": "boolean"
    },
    "run_metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "boot_timeline": {
      "type": "object",
      "required": [
        "segments",
        "boot_outcome"
      ],
      "properties": {
        "segments": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "segment_id",
              "start_line",
              "end_line",
              "phases"
            ],
            "properties": {
              "segment_id": {
                "type": "string"
              },
              "start_line": {
                "type": "integer",
                "minimum": 1
              },
              "end_line": {
                "type": "integer",
                "minimum": 1
              },
              "phases": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "phase",
                    "start_line",
                    "end_line",
                    "confidence"
                  ],
                  "properties": {
                    "phase": {
                      "type": "string",
                      "enum": [
                        "SEC",
                        "PEI",
                        "DXE",
                        "BDS"
                      ]
                    },
                    "start_line": {
                      "type": "integer",
                      "minimum": 1
                    },
                    "end_line": {
                      "type": "integer",
                      "minimum": 1
                    },
                    "confidence": {
                      "type": "number",
                      "minimum": 0.0,
                      "maximum": 1.0
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        },
        "boot_outcome": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "signals": {
      "type": "object",
      "additionalProperties": true
    },
    "deterministic_summary": {
      "type": "object",
      "additionalProperties": true
    },
    "llm_synthesis": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
